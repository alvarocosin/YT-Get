<Window x:Class="YTDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTDownloader"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None" 
        AllowsTransparency="True"
        Title="MainWindow" Height="350" Width="450">
    <Border CornerRadius="8" BorderThickness="0.5" BorderBrush="Gray" Background="#FFFFFF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="Exit" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Margin="3" Tag="IsCloseButton" Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBox MinWidth="250" Height="30" Margin="50"/>
                <Button Height="50" Width="200"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
